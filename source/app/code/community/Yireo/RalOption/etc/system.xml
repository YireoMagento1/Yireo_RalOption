<config>
    <sections>
        <catalog translate="label" module="raloption">
            <groups>
                <raloption translate="label">
                    <label>RAL Option</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>800</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <sorting translate="label">
                            <label>Color Sorting</label>
                            <frontend_type>select</frontend_type>
                            <source_model>raloption/backend_source_sorting</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sorting>
                        <palette translate="label">
                            <label>Default Color Palette</label>
                            <frontend_type>select</frontend_type>
                            <source_model>raloption/backend_source_palette</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </palette>
                        <disclaimer translate="label">
                            <label>Disclaimer</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <show_in_store>1</show_in_store>
                        </disclaimer>
                        <enable_css translate="label">
                            <label>Enable CSS</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>11</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_css>
                        <enable_jquery translate="label">
                            <label>Enable jQuery core</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>21</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_jquery>
                        <enable_fancybox translate="label">
                            <label>Enable jQuery Fancybox</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>22</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_fancybox>
                    </fields>
                </raloption>
            </groups>
        </catalog>
    </sections>
</config>
